<?xml version="1.0" encoding="UTF-8"?>
<manifest>

  <remote name="extended"
        fetch="https://github.com/ArrowOS-Extended"
        revision="arrow-13.1" />

  <remote name="arrow-gitea"
        fetch="https://gitea.com/ArrowOS-Extended"
        revision="arrow-13.1" />

  <!-- bootable repos -->
  <project path="bootable/recovery" name="android_bootable_recovery" remote="extended" />

  <!-- build repos -->
  <project path="build/make" name="android_build" groups="pdk" remote="extended" >
    <linkfile src="CleanSpec.mk" dest="build/CleanSpec.mk" />
    <linkfile src="buildspec.mk.default" dest="build/buildspec.mk.default" />
    <linkfile src="core" dest="build/core" />
    <linkfile src="envsetup.sh" dest="build/envsetup.sh" />
    <linkfile src="target" dest="build/target" />
    <linkfile src="tools" dest="build/tools" />
  </project>
  <project path="build/soong" name="android_build_soong" groups="pdk,tradefed" remote="extended" >
    <linkfile src="root.bp" dest="Android.bp" />
    <linkfile src="bootstrap.bash" dest="bootstrap.bash" />
  </project>

  <!-- device repos -->
  <project path="device/arrow/sepolicy" name="android_device_arrow_sepolicy" remote="extended" />
  <project path="device/samsung_slsi/sepolicy" name="android_device_samsung_slsi_sepolicy" remote="extended" />
  <project path="device/qcom/sepolicy-legacy-um" name="android_device_qcom_sepolicy-legacy-um" remote="extended" />

  <!-- external repos -->
  <project path="external/bson" name="android_external_bson" remote="extended" />

  <!-- framework repos -->
  <project path="frameworks/av" name="android_frameworks_av" remote="extended" />
  <project path="frameworks/base" name="android_frameworks_base" remote="extended" />
  <project path="frameworks/native" name="android_frameworks_native" remote="extended" />

  <!-- hardware repos -->
  <project path="hardware/interfaces" name="android_hardware_interfaces" remote="extended" />
  <project path="hardware/motorola" name="android_hardware_motorola" remote="extended" />
  <project path="hardware/samsung" name="android_hardware_samsung" remote="extended" />
  <project path="kernel/configs" name="android_kernel_configs" groups="vts,pdk" remote="extended" />

  <!-- manifest -->
  <project path="manifest" name="android_manifest" remote="extended" />

  <!-- packages repos -->
  <project path="packages/apps/ArrowPrebuilts" name="android_packages_apps_ArrowPrebuilts" remote="extended" clone-depth="1" />
  <project path="packages/apps/GameSpace" name="android_packages_apps_GameSpace" remote="extended" />
  <project path="packages/apps/Settings" name="android_packages_apps_Settings" remote="extended" />
  <project path="packages/modules/Bluetooth" name="android_packages_modules_Bluetooth" remote="extended" />
  <project path="packages/providers/DownloadProvider" name="android_packages_providers_DownloadProvider" remote="extended" />

  <!-- system repos -->
  <project path="system/core" name="android_system_core" remote="extended" />
  <project path="system/sepolicy" name="android_system_sepolicy" remote="extended" />
  <project path="system/qcom" name="android_system_qcom" remote="extended" />

  <!-- vendor repos -->
  <project path="vendor/arrow" name="android_vendor_arrow" remote="extended" />
  <project path="vendor/arrow-priv" name="vendor_arrow-priv" remote="arrow-gitea" />

</manifest>
